FROM registry.fedoraproject.org/fedora:35
RUN \
  dnf -y update --nodocs --setopt=install_weak_deps=False && \
  dnf install -y --nodocs --setopt=install_weak_deps=False \
  gcc \
  glibc-langpack-en \
  krb5-devel \
  python3-defusedxml \
  python3-devel \
  python3-librepo \
  python3-setuptools \
  python3-tox \
  rpm-build && \
  dnf clean all
